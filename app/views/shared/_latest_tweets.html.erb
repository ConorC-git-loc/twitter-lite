<div class="container_tweets scrollable scrollbar-light-blue">
    <% @tweets.reverse.each do |tweet| %>
        <br>
        <%= latest_tweets_login(tweet) %>
        <%= link_to thisuser_path(tweet.user_id) do %>
          <strong>@<%= tweet.user.handle %></strong>
        <% end %>
        <p class="text-muted">Joined <%= tweet.user.created_at.strftime("%d %b %Y") %></p>
        <br>
        <br>
        <p><%= tweet.content %></p>
        <br>
        <br>
        <p class="text-small"><b>Tweeted on </b><%= tweet.created_at.strftime("%d %b %Y at %I:%M %p") %></p>
        <br>
        <br>
        <p class="tweet_left_options text-small"><%= tweet.likes.count %> <%= (tweet.likes.count) == 1 ? 'Like' : 'Likes' %>&nbsp;&nbsp;<%= link_to 'Show Tweet', tweet, :style => "float:right" %></p>
        <br>
        <br>
        <hr/>
    <% end %>
</div>